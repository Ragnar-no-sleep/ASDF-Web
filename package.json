{
  "name": "asdf-web",
  "version": "1.0.0",
  "description": "ASDF Web - Official website for ASDFASDFA ecosystem",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "preview": "npx serve . -p 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "npm audit --audit-level=high",
    "validate": "npm run lint && npm run test && npm run audit",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "serve": "^14.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-html": "^8.0.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.42.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{js,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ragnar-no-sleep/ASDF-Web.git"
  },
  "author": "ASDF Team",
  "license": "MIT"
}
